{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    // V2 Addons are self-contained and emit types. Nested / composite tsconfigs should not
    // be used
    "composite": false,

    // Path resolution
    "baseUrl": "./src",
    "moduleResolution": "node",

    // types are built by rollup-plugin-ts
    "declarationDir": "./dist",
    "emitDeclarationOnly": true,
    "declaration": true,

    // Build settings
    "noEmitOnError": false,
    "module": "ESNext",
    "target": "ESNext",

    // Features
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,

    // Strictness / Correctness
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,

    // This addon does not allow JavaScript
    "allowJs": false,

    "paths": {
    }
  },
  "include": [
    "src/**/*"
  ]
}






